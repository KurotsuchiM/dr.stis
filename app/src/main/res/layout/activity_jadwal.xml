        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:text="pilih jam kunjungan"
        android:textSize="24dp"
        android:textAllCaps="true"
        />

    <Button
        android:id="@+id/jadwal_button"
        android:background="@drawable/button_submit"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="20dp"
        android:text="Pesan Jadwal"
        android:textColor="#FFF"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:gravity="center_vertical"
        android:text="Anda belum memilih tanggal kunjungan"
        android:textSize="16dp"
        android:textAllCaps="true"
        android:textAlignment="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/jadwal_list_itself"
        android:layout_width="351dp"
        android:layout_height="260dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="161dp"
        tools:itemCount="12"
        android:visibility="gone"
        tools:listitem="@layout/recycler_view_item" />

    <TextView
        android:id="@+id/jadwal_keterangan_jam"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/jadwal_list_itself"
        android:layout_marginBottom="-161dp"
        android:text=""
        android:textSize="24dp"
        android:textAllCaps="true"
        android:textAlignment="center"/>


