<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_jadwal"
    android:orientation="vertical"
    android:padding="0dp"
    >

    <TextView
        android:id="@+id/tanggal_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:text="pilih jam kunjungan"
        android:textSize="24dp"
        android:textAllCaps="true"
        />

    <Button
        android:id="@+id/jadwal_button"
        android:background="@drawable/button_submit"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="20dp"
        android:text="Pesan Jadwal"
        android:textColor="#FFF"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:gravity="center_vertical"
        android:text="Anda belum memilih tanggal kunjungan"
        android:textSize="16dp"
        android:textAllCaps="true"
        android:textAlignment="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/jadwal_list_itself"
        android:layout_width="351dp"
        android:layout_height="260dp"
        android:layout_alignStart="@+id/jadwal_button"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="161dp"
        tools:itemCount="12"

        tools:listitem="@layout/recycler_view_item" />

    <TextView
        android:id="@+id/jadwal_keterangan_jam"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/jadwal_list_itself"
        android:layout_alignStart="@+id/jadwal_button"
        android:layout_marginBottom="-161dp"
        android:text=""
        android:textSize="24dp"
        android:textAllCaps="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/jadwal_keterangan_00"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/jadwal_keterangan_jam"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="1dp"
        android:textSize="24dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:text="" />

    <TextView
        android:id="@+id/jadwal_keterangan_30"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="210dp"
        android:layout_alignTop="@+id/jadwal_keterangan_00"
        android:textSize="24dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:text="" />

</RelativeLayout>